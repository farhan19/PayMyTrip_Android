<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.paymytrip"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="16" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.paymytrip.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.paymytrip.CreateTour"
            android:label="@string/app_name" 
            android:theme="@android:style/Theme.Dialog">
        </activity>
        <activity
            android:name="com.example.paymytrip.TourHome"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.example.paymytrip.AddExpense"
            android:label="@string/app_name" 
            android:theme="@android:style/Theme.Dialog">
        </activity>
        <activity
            android:name="com.example.paymytrip.AddCommonFund"
            android:label="@string/app_name" 
            android:theme="@android:style/Theme.Dialog">
        </activity>
        <activity
            android:name="com.example.paymytrip.TourHistory"
            android:label="@string/app_name" 
            android:theme="@android:style/Theme.Dialog">
        </activity>
    </application>

</manifest>
